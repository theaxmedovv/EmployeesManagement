@model EmployeesManagement.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h2 class="mb-4">Employee Details</h2>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <dl class="row">

            <dt class="col-sm-3">Employee Number</dt>
            <dd class="col-sm-9">@Model.EmpNo</dd>

            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Middle Name</dt>
            <dd class="col-sm-9">@Model.MiddenName</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Email Address</dt>
            <dd class="col-sm-9">@Model.EmailAddress</dd>

            <dt class="col-sm-3">Country</dt>
            <dd class="col-sm-9">@Model.Country</dd>

            <dt class="col-sm-3">Date of Birth</dt>
            <dd class="col-sm-9">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department</dd>

            <dt class="col-sm-3">Designation</dt>
            <dd class="col-sm-9">@Model.Designation</dd>

            <dt class="col-sm-3">Created By</dt>
            <dd class="col-sm-9">@Model.CreatedById</dd>

            <dt class="col-sm-3">Created On</dt>
            <dd class="col-sm-9">@Model.CreatedOn.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Modified By</dt>
            <dd class="col-sm-9">@Model.ModifiedById</dd>

            <dt class="col-sm-3">Modified On</dt>
            <dd class="col-sm-9">
                @(Model.ModifiedOn == default(DateTime)
                    ? "Not Modified"
                    : Model.ModifiedOn.ToString("yyyy-MM-dd HH:mm"))
            </dd>


        </dl>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
